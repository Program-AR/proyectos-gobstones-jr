program {
  ImprimirUnaO()
}

procedure ImprimirUnaO() {
  IniciarNuevaLinea()
  DibujarLíneaDe3ConMargen()  IniciarNuevaLinea()
  DibujarCentroConMargen()    IniciarNuevaLinea()
  DibujarCentroConMargen()    IniciarNuevaLinea()
  DibujarLíneaDe3ConMargen()  IniciarNuevaLinea()
}

procedure DibujarLíneaDe3ConMargen() {
  AvanzarHaciaLaDerecha()
  repeat(3) { 
     HacerUnPunto()
  }
}

procedure DibujarCentroConMargen() {
  AvanzarHaciaLaDerecha()
  HacerUnPunto()
  AvanzarHaciaLaDerecha()
  HacerUnPunto()
}

procedure IniciarNuevaLinea() {
  IrAlMargenIzquierdo()
  Bajar()
}