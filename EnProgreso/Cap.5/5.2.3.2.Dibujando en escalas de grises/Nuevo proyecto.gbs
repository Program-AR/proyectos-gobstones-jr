//
// Describe el procedimiento...
//
procedure MonocromatizarImagen() {
  repeat(9) {
    MonocromatizarFila()
    Mover(Norte)
  }
  MonocromatizarFila()
  IrAlBorde(Sur)
}

//
// Describe el procedimiento...
//
procedure MonocromatizarFila() {
  repeat(9) {
    MonocromatizarCelda()
    Mover(Este)
  }
  MonocromatizarCelda()
  IrAlBorde(Oeste)
}

//
// Describe el procedimiento...
//
procedure MonocromatizarCelda() {
  CodificarTonoDeGris()
  SacarTodas_(Rojo)
  SacarTodas_(Verde)
  SacarTodas_(Azul)
}

//
// Describe el procedimiento...
//
procedure CodificarTonoDeGris() {
  repeat((nroBolitas(Rojo) + (nroBolitas(Verde) + nroBolitas(Azul))) div 3) {
    Poner(Negro)
  }
}


program {
  MonocromatizarImagen()
}