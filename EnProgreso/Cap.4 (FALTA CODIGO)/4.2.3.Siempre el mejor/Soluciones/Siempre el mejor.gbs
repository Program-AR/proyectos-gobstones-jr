program {
  CombatirGikachuVsGarmander()
}

procedure CombatirGikachuVsGarmander() {
  if (nroBolitas(Rojo) == nroBolitas(Negro)) {
    Empatan()
  }
  else {
    if (nroBolitas(Rojo) < nroBolitas(Negro)) 
         { SacarGarmander() }
    else { SacarGikachu()   }
  }
}

procedure SacarGikachu() {
  repeat(nroBolitas(Negro)) { Sacar(Negro) }
}

procedure SacarGarmander() {
  repeat(nroBolitas(Rojo)) { Sacar(Rojo) }
}

procedure Empatan() {
  SacarGarmander()
  SacarGikachu()
}
