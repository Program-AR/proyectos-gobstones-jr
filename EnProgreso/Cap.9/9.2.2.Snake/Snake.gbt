procedure PonerMuchas(n, color)
  { repeat (n) { Poner(color) } } 

procedure SacarMuchas(n, color)
  { repeat (n) { Sacar(color) } } 

procedure SacarTodas(color)
  { SacarMuchas(nroBolitas(color), color) } 

