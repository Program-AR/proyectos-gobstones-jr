procedure SacarTodas_(c) { 
   repeat (nroBolitas(c)) { Sacar(c) } 
}

procedure Poner__Veces(color,n) {
  repeat(n) { Poner(color) }
}

procedure ResetearElJuego() {
  VaciarTablero()
  IrAlBorde(Oeste)
  IrAlBorde(Norte)
  Poner__Veces(Rojo,  1)
  Mover(Este)
  Poner__Veces(Rojo,  2)
  Poner__Veces(Negro, 2)
  Mover(Este)
  Poner__Veces(Rojo,  3)
  Mover(Sur)
  Mover(Oeste)
  Poner__Veces(Rojo,  4)
  Poner__Veces(Negro, 1)
}
