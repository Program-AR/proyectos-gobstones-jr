program { EntrenarABeto() }

procedure EntrenarABeto() {
    repeat (4) {
            PatearYVolver()
            MoverABetoAl(Norte)
    }
    PatearYVolver()
}

procedure PatearYVolver() {
        IrHastaLaPelota()
        PatearLaPelota()
        Volver()
}

procedure PatearLaPelota() {
  MoverElPieDeBeto()
  repeat (3) { MoverLaPelotaAl(Este) }
  repeat (3) { Mover(Oeste) }
}

procedure IrHastaLaPelota() { repeat (6) { MoverABetoAl(Este) } }
procedure Volver() { repeat (6) { MoverABetoAl(Oeste) } }