procedure SacarTodas_(color) {
  Sacar__Veces(color, nroBolitas(color))
}

procedure Poner__Veces(color, n) {
  repeat(n) { Poner(color) }
}

procedure Sacar__Veces(color, n) {
  repeat(n) { Sacar(color) }
}

function opuesto_(dir) {
  if (dir == Norte) { ret := Sur   }
  if (dir == Este)  { ret := Oeste }
  if (dir == Sur)   { ret := Norte }
  if (dir == Oeste) { ret := Este  }
  return (ret)
}