program { 
    HacerLíneaPrimariaCortaDeLaManga()
    HacerLíneaSecundariaMediaDeLaManga()
    HacerLíneaPrimariaLargaDeLaManga()
    HacerLíneaSecundariaCortaDelTorso()
    HacerLíneaSecundariaLargaDelTorso()
    HacerLíneaPrimariaLargaDelTorso()
