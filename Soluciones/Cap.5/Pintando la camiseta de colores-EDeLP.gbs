    HacerLíneaSecundariaLargaDeLaManga()
    HacerLíneaPrimariaMediaDeLaManga()
    HacerLíneaSecundariaCortaDeLaManga()
}

procedure PintarConColorPrimario() {
    repeat (4) { Poner(Rojo)  }
    repeat (0) { Poner(Verde) }
    repeat (0) { Poner(Azul)  }
}

procedure PintarConColorSecundario() {
    repeat (4) { Poner(Rojo)  }
    repeat (4) { Poner(Verde) }
    repeat (4) { Poner(Azul)  }
}

procedure HacerLíneaPrimariaCortaDeLaManga() {
    repeat(5) { Mover(Norte) }
    repeat(3) { PintarConColorPrimario() Mover(Norte) }
    IrAlBorde(Sur)
    Mover(Este)
}

procedure HacerLíneaPrimariaMediaDeLaManga() {
    repeat(5) { Mover(Norte) }
