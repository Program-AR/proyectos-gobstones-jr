procedure DibujarUnCuadrado() {
  DibujarUnaLíneaAlNorte()
  DibujarUnaLíneaAlEste()
  DibujarUnaLíneaAlSur()
  DibujarUnaLíneaAlOeste()
}

procedure DibujarUnaLíneaAlNorte() {
  repeat(4) {
    Poner(Verde)
    Mover(Norte)
  }
}

procedure DibujarUnaLíneaAlEste() {
  repeat(4) {
    Poner(Verde)
    Mover(Este)
  }
}

procedure DibujarUnaLíneaAlSur() {
  repeat(4) {
    Poner(Verde)
    Mover(Sur)
  }
}

procedure DibujarUnaLíneaAlOeste() {
  repeat(4) {
    Poner(Verde)
    Mover(Oeste)
  }
}


program {
  DibujarUnCuadrado()
}
