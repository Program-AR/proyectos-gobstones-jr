procedure DibujarLaVíbora() {
  repeat(10) {
    DibujarSegmentoDeLaVíboraYAvanzar()
  }
}

procedure DibujarUnSegmentoDeLaVíbora() {
  Poner(Verde)
}

procedure Avanzar() {
  if (puedeMover(Este)) {
    Mover(Este)
  } else {
    Mover(Norte)
  }
}

procedure DibujarSegmentoDeLaVíboraYAvanzar() {
  DibujarUnSegmentoDeLaVíbora()
  Avanzar()
}


program {
  DibujarLaVíbora()
}
