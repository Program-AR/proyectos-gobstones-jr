procedure SimularUnInterruptorDeLuz() {
  if (hayBolitas(Azul)) {
    ApagarLaLuz()
  } else {
    PrenderLaLuz()
  }
}

procedure MantenerLaSecciónDeHuerta() {
  if (hayPlantas()) {
    FertilizarPlantas()
  } else {
    PlantarTomates()
  }
}

function hayPlantas() {
  return (hayBolitas(Verde))
}

procedure PrenderLaLuz() {
  Poner(Azul)
  Sacar(Negro)
}

procedure PlantarTomates() {
  Poner(Verde)
}

procedure ApagarLaLuz() {
  Poner(Negro)
  Sacar(Azul)
}

procedure FertilizarPlantas() {
  Poner(Rojo)
}


program {
  MantenerLaSecciónDeHuerta()
  Mover(Norte)
  SimularUnInterruptorDeLuz()
}
