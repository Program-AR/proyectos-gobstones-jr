procedure EncenderLasFilasDeLuces() {
  repeat(5) {
    EncenderUnaFilaYVolver()
    MoverALuchoAlNorte()
  }
  EncenderUnaFilaYVolver()
}

procedure MoverALuchoAlNorte() {
  Sacar(Negro)
  Mover(Norte)
  Poner(Negro)
}

procedure EncenderUnaFilaYVolver() {
  repeat(8) {
    EncenderLuzSiCorresponde()
    MoverALuchoAlEste()
  }
  EncenderLuzSiCorresponde()
  VolverALuchoAlBordeOeste()
}

procedure VolverALuchoAlBordeOeste() {
  repeat(8) {
    MoverALuchoAlOeste()
  }
}

procedure EncenderLuzSiCorresponde() {
  if (hayLuz()) {
    EncenderLuz()
  }
}

procedure MoverALuchoAlEste() {
  Sacar(Negro)
  Mover(Este)
  Poner(Negro)
}

procedure EncenderLuz() {
  Poner(Azul)
}

procedure MoverALuchoAlOeste() {
  Sacar(Negro)
  Mover(Oeste)
  Poner(Negro)
}

function hayLuzApagada() {
  return (nroBolitas(Azul) == 1)
}

function hayLuzPrendida() {
  return (nroBolitas(Azul) == 2)
}

function hayLuz() {
  return (hayLuzApagada() || hayLuzPrendida())
}


program {
  EncenderLasFilasDeLuces()
}
