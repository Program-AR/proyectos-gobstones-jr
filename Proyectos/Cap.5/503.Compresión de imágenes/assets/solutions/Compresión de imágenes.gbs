procedure DescomprimirFila() {
  repeat(nroBolitas_EnLaPrimeraCelda(Negro) - 1) {
    Mover(Este)
    CopiarColorRGB()
  }
  IrAlBorde(Oeste)
  SacarTodasLasDeColor_(Negro)
}

procedure DescomprimirImagen() {
  repeat(8) {
    DescomprimirFila()
    Mover(Norte)
  }
  DescomprimirFila()
  IrAlBorde(Sur)
}

procedure CopiarAzulDeLaPrimeraCelda() {
  repeat(nroBolitas_EnLaPrimeraCelda(Azul)) {
    Poner(Azul)
  }
}

procedure CopiarColorRGB() {
  CopiarRojoDeLaPrimeraCelda()
  CopiarVerdeDeLaPrimeraCelda()
  CopiarAzulDeLaPrimeraCelda()
}

procedure CopiarRojoDeLaPrimeraCelda() {
  repeat(nroBolitas_EnLaPrimeraCelda(Rojo)) {
    Poner(Rojo)
  }
}

procedure CopiarVerdeDeLaPrimeraCelda() {
  repeat(nroBolitas_EnLaPrimeraCelda(Verde)) {
    Poner(Verde)
  }
}


program {
  DescomprimirImagen()
}
