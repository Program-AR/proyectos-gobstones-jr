procedure PintarConColorPrimario() {
  repeat(0) {
    Poner(Rojo)
  }
  repeat(3) {
    Poner(Verde)
  }
  repeat(4) {
    Poner(Azul)
  }
}

procedure PintarLíneaPrimariaCortaDeLaManga() {
  repeat(5) {
    Mover(Norte)
  }
  repeat(3) {
    PintarConColorPrimario()
    Mover(Norte)
  }
}

procedure PintarLíneaSecundariaCortaDeLaManga() {
  repeat(5) {
    Mover(Norte)
  }
  repeat(3) {
    PintarConColorSecundario()
    Mover(Norte)
  }
}

procedure PintarMitadIzquierda() {
  PintarLíneaPrimariaCortaDeLaManga()
  PasarALaSiguienteColumna()
  PintarLíneaSecundariaMediaDeLaManga()
  PasarALaSiguienteColumna()
  PintarLíneaPrimariaLargaDeLaManga()
  PasarALaSiguienteColumna()
  PintarLíneaSecundariaCortaDelTorso()
  PasarALaSiguienteColumna()
  PintarLíneaSecundariaLargaDelTorso()
  PasarALaSiguienteColumna()
  PintarLíneaPrimariaLargaDelTorso()
  PasarALaSiguienteColumna()
  PintarLíneaPrimariaCortaDelTorso()
}

procedure PintarLíneaPrimariaMediaDeLaManga() {
  repeat(5) {
    Mover(Norte)
  }
  repeat(4) {
    PintarConColorPrimario()
    Mover(Norte)
  }
}

procedure PintarLíneaSecundariaMediaDeLaManga() {
  repeat(5) {
    Mover(Norte)
  }
  repeat(4) {
    PintarConColorSecundario()
    Mover(Norte)
  }
}

procedure PintarConColorSecundario() {
  repeat(4) {
    Poner(Rojo)
  }
  repeat(4) {
    Poner(Verde)
  }
  repeat(4) {
    Poner(Azul)
  }
}

procedure PintarMitadDerecha() {
  PintarLíneaSecundariaCortaDelTorso()
  PasarALaSiguienteColumna()
  PintarLíneaSecundariaLargaDelTorso()
  PasarALaSiguienteColumna()
  PintarLíneaPrimariaLargaDelTorso()
  PasarALaSiguienteColumna()
  PintarLíneaPrimariaCortaDelTorso()
  PasarALaSiguienteColumna()
  PintarLíneaSecundariaLargaDeLaManga()
  PasarALaSiguienteColumna()
  PintarLíneaPrimariaMediaDeLaManga()
  PasarALaSiguienteColumna()
  PintarLíneaSecundariaCortaDeLaManga()
}

procedure PintarLíneaPrimariaLargaDeLaManga() {
  repeat(6) {
    Mover(Norte)
  }
  repeat(4) {
    PintarConColorPrimario()
    Mover(Norte)
  }
}

procedure PintarLíneaSecundariaLargaDeLaManga() {
  repeat(6) {
    Mover(Norte)
  }
  repeat(4) {
    PintarConColorSecundario()
    Mover(Norte)
  }
}

procedure PintarLíneaPrimariaLargaDelTorso() {
  repeat(11) {
    PintarConColorPrimario()
    Mover(Norte)
  }
}

procedure PintarLíneaSecundariaLargaDelTorso() {
  repeat(11) {
    PintarConColorSecundario()
    Mover(Norte)
  }
}

procedure PasarALaSiguienteColumna() {
  IrAlBorde(Sur)
  Mover(Este)
}

procedure PintarLíneaPrimariaCortaDelTorso() {
  repeat(10) {
    PintarConColorPrimario()
    Mover(Norte)
  }
}

procedure PintarLíneaSecundariaCortaDelTorso() {
  repeat(10) {
    PintarConColorSecundario()
    Mover(Norte)
  }
}


program {
  PintarMitadIzquierda()
  PasarALaSiguienteColumna()
  PintarMitadDerecha()
}
