program {
  ImprimirUnaO()
}

procedure ImprimirUnaO() {
  IrAlMargenIzquierdo() Bajar() 
  DibujarLíneaDe3ConMargen()  
  DibujarCentroConMargen()
  DibujarCentroConMargen()
  DibujarLíneaDe3ConMargen()
}

procedure DibujarLíneaDe3ConMargen() {
  AvanzarHaciaLaDerecha()
  repeat(3) { 
     HacerUnPunto()
  }
  IrAlMargenIzquierdo() Bajar() 
}

procedure DibujarCentroConMargen() {
  AvanzarHaciaLaDerecha()
  HacerUnPunto()
  AvanzarHaciaLaDerecha()
  HacerUnPunto()
  IrAlMargenIzquierdo() Bajar() 
}
