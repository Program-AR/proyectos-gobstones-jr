program {
  ImprimirUnaO()
}

procedure ImprimirUnaO() {
  IrAlMargenIzquierdo()  Bajar()
  DibujarLíneaDe3ConMargen()  IrAlMargenIzquierdo() Bajar()
  DibujarCentroConMargen()    IrAlMargenIzquierdo() Bajar()
  DibujarCentroConMargen()    IrAlMargenIzquierdo() Bajar()
  DibujarLíneaDe3ConMargen()  IrAlMargenIzquierdo() Bajar()
}

procedure DibujarLíneaDe3ConMargen() {
  AvanzarHaciaLaDerecha()
  repeat(3) { 
     HacerUnPunto()
  }
}

procedure DibujarCentroConMargen() {
  AvanzarHaciaLaDerecha()
  HacerUnPunto()
  AvanzarHaciaLaDerecha()
  HacerUnPunto()
}
