procedure DibujarCuadradoDeColorRojo() {
  repeat(2) {
    Poner(Rojo)
    Mover(Norte)
  }
  repeat(2) {
    Poner(Rojo)
    Mover(Este)
  }
  repeat(2) {
    Poner(Rojo)
    Mover(Sur)
  }
  repeat(2) {
    Poner(Rojo)
    Mover(Oeste)
  }
}

