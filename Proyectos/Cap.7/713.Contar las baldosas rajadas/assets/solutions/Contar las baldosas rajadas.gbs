procedure InformarLaCantidadDeBaldosasRajadas() {
  IrALaEsquinaSuroeste()
  cantidadDeBaldosasRajadasQueYaConté := 0
  while (not (esLaÚltimaBaldosa())) {
    if (esUnaBaldosaRajada()) {
      cantidadDeBaldosasRajadasQueYaConté := cantidadDeBaldosasRajadasQueYaConté + 1
    }
    PasarALaSiguienteBaldosa()
  }
  if (esUnaBaldosaRajada()) {
    cantidadDeBaldosasRajadasQueYaConté := cantidadDeBaldosasRajadasQueYaConté + 1
  }
  IrALaEsquinaSuroeste()
  Poner__Veces(Negro, cantidadDeBaldosasRajadasQueYaConté)
}

procedure ComenzarElRecorrido() {
  IrALaEsquinaSuroeste()
}

function esUnaBaldosaRajada() {
  return (hayBolitas(Verde))
}

procedure PasarALaSiguienteBaldosa() {
  if (puedeMover(Este)) {
    Mover(Este)
  } else {
    IrAlBorde(Oeste)
    Mover(Norte)
  }
}

function esLaÚltimaBaldosa() {
  return (not(puedeMover(Este)) && not(puedeMover(Norte)))
}

procedure IrALaEsquinaSuroeste() {
  IrAlBorde(Sur)
  IrAlBorde(Oeste)
}


program {
  InformarLaCantidadDeBaldosasRajadas()
}
