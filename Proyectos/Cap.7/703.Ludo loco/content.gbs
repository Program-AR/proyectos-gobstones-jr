procedure PosicionarseParaUnCuadrado(dirección1, distancia1, dirección2, distancia2) {
  IrAlBorde(dirección1)
  repeat(distancia1 - 1) {
    Mover(opuesto(dirección1))
  }
  IrAlBorde(dirección2)
  repeat(distancia2 - 1) {
    Mover(opuesto(dirección2))
  }
}

